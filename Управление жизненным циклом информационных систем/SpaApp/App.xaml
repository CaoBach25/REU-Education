<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SpaApp.App">
    <Application.Resources>
        <ResourceDictionary>
            <!-- Màu sắc chính -->
            <Color x:Key="PrimaryColor">#FADADD</Color>
            <Color x:Key="AccentColor">#FF69B4</Color>
            <Color x:Key="TextColor">#4A4A4A</Color>
            <Color x:Key="ButtonColor">#FFC0CB</Color>
            <Color x:Key="BackgroundColor">#FFFFFF</Color>

            <!-- Style cho Label -->
            <Style TargetType="Label">
                <Setter Property="TextColor" Value="{StaticResource TextColor}" />
                <Setter Property="FontSize" Value="18" />
                <Setter Property="HorizontalOptions" Value="Center" />
            </Style>

            <!-- Style cho Button -->
            <Style TargetType="Button">
                <Setter Property="BackgroundColor" Value="{StaticResource ButtonColor}" />
                <Setter Property="TextColor" Value="{StaticResource BackgroundColor}" />
                <Setter Property="CornerRadius" Value="20" />
                <Setter Property="Padding" Value="10" />
                <Setter Property="FontSize" Value="18" />
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>